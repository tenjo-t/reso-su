---
import { Icon } from "astro-icon/components";

type Props = {
  link: string;
  pubDate: string;
  title: string;
  creator?: string;
  contentSnippet?: string;
  site?: string;
};

const { link, pubDate, title, creator, contentSnippet, site } = Astro.props;
---

<a
  class="block p-4 border border-zinc-300 hover:border-amber-600 focus:border-amber-600 bg-zinc-50 active:bg-zinc-100 rounded-lg transition-all"
  href={link}
>
  <article>
    <div class="flex items-center gap-1 text-sm text-amber-700">
      <Icon name="lucide:calendar" />
      {new Date(pubDate).toLocaleDateString("ja-JP")}{site && "ã€€@" + site}
    </div>
    <h1 class="pt-2 text-xl text-zinc-900 font-bold">{title}</h1>
    {
      creator && (
        <div class="flex items-center gap-1">
          <Icon name="lucide:user-round-pen" />
          {creator}
        </div>
      )
    }
    {
      contentSnippet && (
        <p class="pt-4 text-sm text-zinc-600 line-clamp-2">{contentSnippet}</p>
      )
    }
  </article>
</a>
